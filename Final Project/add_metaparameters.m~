% Add Metaparameters to the Dataset (determined from performing error
% analysis).
function add_metaparameters()
    % Load transit dataset
    data = readtable('./data/data_with_transits.csv');

    % Add MetaParameters:
    data.StarGap = abs(data.StarTemp - 4000); % 4000K = upper bound for Red Dwarfs
    
    % Stellar Mass (in SI units):
    data.StarMass = (data.StarLuminosity/1.4)^(1/3.5); % Default.
    data.StarMass(
    data.StarMass((Lstar/0.23)^(1/2.3) < 0.43) = 
    
        if (Lstar/0.23)^(1/2.3) < 0.43
            Mstar = (Lstar/0.23)^(1/2.3);
        elseif 0.43 <= Lstar^0.25 && Lstar^0.25 < 2
            Mstar = Lstar^0.25;
        elseif 
            Mstar = Lstar / 32000;
        else
            Mstar = (Lstar/1.4)^(1/3.5);
        end
    
    data.StarMass = data.StarLuminosity .^ (1/3.5);
    
    % Export Data:
    writetable(data, './data/data_with_metaparams.csv');
end